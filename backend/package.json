{
  "name": "task-analytics-backend",
  "version": "1.0.0",
  "description": "Real-time Task Analytics Dashboard Backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test tests/**/*.test.js",
    "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov node --test tests/**/*.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "seed": "node scripts/seed-tasks.js",
    "seed:small": "node scripts/seed-tasks.js 25",
    "seed:large": "node scripts/seed-tasks.js 100"
  },
  "keywords": [
    "task",
    "analytics",
    "dashboard",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "socket.io"
  ],
  "author": "Technical Test",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "bullmq": "^5.54.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "mongoose": "^8.15.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3"
  }
}
